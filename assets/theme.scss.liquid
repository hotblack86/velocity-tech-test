body {
  font-family: "Montserrat", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
  font-size: 16px;
  line-height: 1.5;
  color: #222;
  padding: 0;
  box-sizing: inherit;
}

html, body {
  height: 100%;
  margin: 0;
}

.page-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

main {
  flex: 1;
}

h1, h2, h3, h4, h5, h6 {
  font-weight: 600;
  line-height: 1.2;
  margin: 0 0 0.5em;
}

a {
  color: inherit;
  text-decoration: none;
}
a:hover {
  text-decoration: underline;
}

/* Header */
.header {
  background: #1F3666;
  color: #fff;
  padding: 1rem 2rem;
}
.header__wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.header__logo a {
  font-size: 1.5rem;
  color: #fff;
  font-weight: 400;
  letter-spacing: 20px;
  line-height: 150%;
  text-decoration: none;
}
.header__icons {
  display: flex;
  gap: 1.5rem;
  align-items: center;
}
.header__icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  text-decoration: none;
  position: relative;
}
.header__icon svg {
  display: block;
  width: 24px;
  height: 24px;
}
.header__cart-count {
  position: absolute;
  top: -7px;
  right: -7px;
  background: #58D68D;
  color: #000;
  font-size: 0.75rem;
  font-weight: bold;
  padding: 0.1rem 0.4rem;
  border-radius: 50%;
}

/* Footer */
.footer {
  background: #1F3666;
  color: #fff;
  padding: 1rem 2rem;
}
.footer__wrapper {
  margin: 0 auto;
  display: grid;
  gap: 2rem;
}
.footer__about {
  max-width: 480px;
}
.footer__bottom {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2rem;
}
.footer__logo {
  font-size: 1.5rem;
  font-weight: 400;
  letter-spacing: 20px;
  margin-bottom: 0.75rem;
}
.footer__text {
  font-size: 0.875rem;
  line-height: 1.4;
}
.footer__list {
  list-style: none;
  margin: 0;
  padding: 0;
}
.footer__item {
  margin-bottom: 0.5rem;
}
.footer__link {
  color: #fff;
  text-decoration: none;
  font-weight: 600;
}
.footer__link:hover {
  text-decoration: underline;
}
@media (min-width: 769px) {
  .footer__wrapper {
    grid-template-columns: 4fr 1fr 1fr;
    align-items: start;
  }
  .footer__bottom {
    grid-column: span 2;
    grid-template-columns: 1fr 1fr;
  }
}

/* Buttons */
.button {
  background-color: #1F3666;
  color: #fff;
  padding: 0.5rem 1rem;
  border-radius: 4px;
  cursor: pointer;
}

/* Cart Count Badge */
.cart-count {
  position: absolute;
  top: 9px;
  right: 18px;
  background: #58D68D;
  color: #000;
  font-size: 0.75rem;
  font-weight: bold;
  padding: 0.1rem 0.4rem;
  border-radius: 50%;
}

/* Modal Cart */
.modal-cart {
  position: fixed;
  top: 0;
  right: 0;
  width: 400px;
  height: 100%;
  background: #fff;
  box-shadow: -2px 0 8px rgba(0, 0, 0, 0.2);
  display: none;
  z-index: 1000;
}

/* Collection */
.collection {
  padding: 2rem 1rem;
}
.collection__title {
  font-size: 1.5rem;
  margin-bottom: 3.5rem;
  text-align: center;
}
.collection__wrapper {
  display: grid;
  gap: 1.5rem;
  margin: 0 auto;
  width: 100%;
  grid-template-columns: 1fr;
}
@media (min-width: 768px) {
  .collection__wrapper {
    grid-template-columns: repeat(2, 1fr);
  }
}
@media (min-width: 1024px) {
  .collection__wrapper {
    grid-template-columns: repeat(4, 1fr);
  }
}

/* Product Card */
.product-card {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  border: 1px solid gray;
  border-radius: 0.5rem;
  padding: 1rem;
}
.product-card__promos {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.5rem;
}
.product-card__labels {
  display: flex;
  flex-wrap: wrap;
  gap: 0.25rem;
}
.product-card__labels .product-card__label {
  background-color: #B2DAE0;
  color: black;
  font-size: 0.75rem;
  font-weight: 700;
  padding: 0.125rem 0.5rem;
  border-radius: 0.25rem;
  display: flex;
  align-items: center;
  gap: 3px;
}
.product-card__labels .product-card__label--sale {
  background-color: #FACDCE;
}
.product-card__labels .product-card__label-icon {
  width: 12px;
  height: 12px;
}
.product-card__wishlist {
  display: flex;
  align-items: center;
}
.product-card__wishlist svg {
  width: 20px;
  height: 20px;
}
.product-card__image {
  display: block;
  width: 100%;
  height: auto;
  max-width: 100%;
  object-fit: cover;
  aspect-ratio: 1/1;
  margin-bottom: 0.75rem;
  border-radius: 0.25rem;
}
.product-card__info {
  margin-bottom: 1.5rem;
  text-align: center;
}
.product-card__info__title {
  font-size: 1rem;
  font-weight: 600;
  margin: 0;
}
.product-card__divider {
  border: none;
  border-top: 1px solid gray;
  margin: auto 0 2rem;
}
.product-card__actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.product-card__actions .product-card__quantity {
  display: flex;
}
.product-card__actions .product-card__quantity .product-card__quantity-btn {
  border: 1px solid gray;
  padding: 0.25rem 0.5rem;
  cursor: pointer;
  font-size: 0.875rem;
}
.product-card__actions .product-card__quantity .product-card__quantity-btn--minus {
  margin-right: 0.25rem;
}
.product-card__actions .product-card__quantity .product-card__quantity-btn--plus {
  margin-left: 0.25rem;
}
.product-card__actions .product-card__quantity .product-card__quantity-input {
  width: 2rem;
  text-align: center;
  border: 1px solid gray;
  border-radius: 0.25rem;
  font-size: 0.875rem;
  /* Remove browser number arrows */
  -moz-appearance: textfield;
  -webkit-appearance: none;
  appearance: none;
  /* Remove WebKit spin buttons */
}
.product-card__actions .product-card__quantity .product-card__quantity-input::-webkit-inner-spin-button, .product-card__actions .product-card__quantity .product-card__quantity-input::-webkit-outer-spin-button {
  -webkit-appearance: none;
  margin: 0;
}
.product-card__actions .product-card__price {
  font-weight: bold;
  font-size: 1rem;
}

/* Cart Drawer */
.cart-drawer {
  position: fixed;
  inset: 0;
  display: flex;
  justify-content: flex-end;
  z-index: 1001;
  pointer-events: none;
}
.cart-drawer__overlay {
  flex: 1;
  background: rgba(0, 0, 0, 0.5);
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
  z-index: 1000;
}
.cart-drawer__panel {
  width: 400px;
  max-width: 90%;
  background: #fff;
  height: 100%;
  transform: translateX(100%);
  transition: transform 0.3s ease;
  display: flex;
  flex-direction: column;
  padding: 1rem;
  box-shadow: -2px 0 8px rgba(0, 0, 0, 0.1);
}
.cart-drawer.is-active {
  pointer-events: auto;
}
.cart-drawer.is-active .cart-drawer__overlay {
  opacity: 1;
  pointer-events: auto;
}
.cart-drawer.is-active .cart-drawer__panel {
  transform: translateX(0);
}
.cart-drawer {
  /* Header */
}
.cart-drawer__header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 1rem;
}
.cart-drawer__header-title {
  font-size: 1.25rem;
  font-weight: 600;
}
.cart-drawer__header-clear-all {
  background: none;
  border: none;
  font-size: 0.9rem;
  color: #5D5F63;
  cursor: pointer;
}
.cart-drawer__header-clear-all span {
  text-decoration: underline;
}
.cart-drawer__divider {
  border: none;
  border-top: 1px solid #CCD0D6;
  margin: 0.5rem 0 1rem;
}
.cart-drawer {
  /* Content / Items */
}
.cart-drawer__content {
  flex: 1;
  overflow-y: auto;
  padding-bottom: 1rem;
}
.cart-drawer__items {
  list-style: none;
  padding: 0;
  margin: 0;
}
.cart-drawer__item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 1rem;
  gap: 0.75rem;
}
.cart-drawer__item-image {
  width: 80px;
  height: 80px;
  flex-shrink: 0;
}
.cart-drawer__item-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.cart-drawer__item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.cart-drawer__item-title {
  font-size: 1rem;
  font-weight: 500;
  margin: 0;
}
.cart-drawer__item-variant {
  font-size: 0.875rem;
  color: #666;
  margin: 0.25rem 0;
}
.cart-drawer__item-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cart-drawer__item-actions .cart-drawer__item-price {
  font-weight: 600;
}
.cart-drawer__item-actions-quantity {
  display: flex;
  align-items: center;
  gap: 0.25rem;
}
.cart-drawer__item-actions-quantity input {
  width: 50px;
  text-align: center;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0.25rem;
}
.cart-drawer__item-actions-quantity-btn {
  background: #f5f5f5;
  border: 1px solid #ddd;
  padding: 0.25rem 0.5rem;
  cursor: pointer;
  font-size: 1rem;
  line-height: 1;
}
.cart-drawer__item__remove {
  background: none;
  border: none;
  font-size: 1.2rem;
  cursor: pointer;
  margin-left: 0.5rem;
}
.cart-drawer__empty {
  text-align: center;
  color: #999;
  padding: 2rem 0;
}
.cart-drawer {
  /* Footer */
}
.cart-drawer__footer {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  flex-shrink: 0;
  position: sticky;
  bottom: 2rem;
  border-top: 1px solid #eee;
  padding-top: 1rem;
}
.cart-drawer__subtotal {
  display: flex;
  justify-content: space-between;
  font-weight: 600;
  font-size: 1rem;
}
.cart-drawer__reward {
  font-size: 0.875rem;
  background: linear-gradient(115.77deg, #FEC520 5.06%, #F89D31 53.6%, #F96D00 105.27%);
  color: #000;
  padding: 0.25rem 0.5rem;
  border-radius: 4px;
}
.cart-drawer__checkout-btn {
  display: block;
  width: 100%;
  text-align: center;
  background: #000;
  color: #fff;
  padding: 0.75rem 0;
  font-weight: 600;
  border-radius: 30px;
  text-decoration: none;
  cursor: pointer;
}

