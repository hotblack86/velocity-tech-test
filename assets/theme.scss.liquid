body {
  font-family: "Montserrat", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
  font-size: 16px;
  line-height: 1.5;
  color: #222;
  padding: 0;
  box-sizing: inherit;
}

html, body {
  height: 100%;
  margin: 0;
}

.page-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

main {
  flex: 1;
}

h1, h2, h3, h4, h5, h6 {
  font-weight: 600;
  line-height: 1.2;
  margin: 0 0 0.5em;
}

a {
  color: inherit;
  text-decoration: none;
}
a:hover {
  text-decoration: underline;
}

/* Header */
.header {
  background: #1F3666;
  color: #fff;
  padding: 1rem 2rem;
}
.header__wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.header__logo a {
  font-size: 1.5rem;
  color: #fff;
  font-weight: 400;
  letter-spacing: 20px;
  line-height: 150%;
  text-decoration: none;
}
.header__icons {
  display: flex;
  gap: 1.5rem;
  align-items: center;
}
.header__icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  text-decoration: none;
  position: relative;
}
.header__icon--cart {
  cursor: pointer;
}
.header__icon svg {
  display: block;
  width: 24px;
  height: 24px;
}
.header__cart-count {
  display: none;
  position: absolute;
  top: -7px;
  right: -7px;
  background: #58D68D;
  color: #000;
  font-size: 0.75rem;
  font-weight: bold;
  padding: 0.1rem 0.4rem;
  border-radius: 50%;
}

/* Footer */
.footer {
  background: #1F3666;
  color: #fff;
  padding: 1rem 2rem;
}
.footer__wrapper {
  margin: 0 auto;
  display: grid;
  gap: 2rem;
}
.footer__about {
  max-width: 480px;
}
.footer__bottom {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2rem;
}
.footer__logo {
  font-size: 1.5rem;
  font-weight: 400;
  letter-spacing: 20px;
  margin-bottom: 0.75rem;
}
.footer__text {
  font-size: 0.875rem;
  line-height: 1.4;
}
.footer__list {
  list-style: none;
  margin: 0;
  padding: 0;
}
.footer__item {
  margin-bottom: 0.5rem;
}
.footer__link {
  color: #fff;
  text-decoration: none;
  font-weight: 600;
}
.footer__link:hover {
  text-decoration: underline;
}
@media (min-width: 769px) {
  .footer__wrapper {
    grid-template-columns: 4fr 1fr 1fr;
    align-items: start;
  }
  .footer__bottom {
    grid-column: span 2;
    grid-template-columns: 1fr 1fr;
  }
}

/* Collection */
.collection {
  padding: 2rem 1rem;
}
.collection__title {
  font-size: 1.5rem;
  margin-bottom: 3.5rem;
  text-align: center;
}
.collection__wrapper {
  display: grid;
  gap: 2rem;
  margin: 0 auto;
  width: 100%;
  grid-template-columns: 1fr;
}
@media (min-width: 768px) {
  .collection__wrapper {
    grid-template-columns: repeat(2, 1fr);
  }
}
@media (min-width: 1024px) {
  .collection__wrapper {
    grid-template-columns: repeat(4, 1fr);
  }
}

