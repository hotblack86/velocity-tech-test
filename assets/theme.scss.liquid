body {
  font-family: "Montserrat", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
  font-size: 16px;
  line-height: 1.5;
  color: #222;
  margin: 0;
  padding: 0;
}

h1, h2, h3, h4, h5, h6 {
  font-weight: 600;
  line-height: 1.2;
  margin: 0 0 0.5em;
}

a {
  color: inherit;
  text-decoration: none;
}
a:hover {
  text-decoration: underline;
}

/* Header */
.site-header {
  background: #1F3666;
  padding: 1rem 2rem;
}

.header-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header-logo a {
  font-size: 1.5rem;
  color: #fff;
  font-weight: 400;
  letter-spacing: 20px;
  line-height: 150%;
  text-decoration: none;
}

.header-icons {
  display: flex;
  gap: 1.5rem;
  align-items: center;
}

.header-icon svg {
  width: 24px;
  height: 24px;
}

/* Footer */
.footer {
  background: #1F3666;
  padding: 1rem 2rem;
  color: #fff;
  text-align: center;
}
.footer a {
  color: #fff;
}

/* Buttons */
.button {
  background-color: #1F3666;
  color: #fff;
  padding: 0.5rem 1rem;
  border-radius: 4px;
  cursor: pointer;
}

/* Cart Count Badge */
.cart-count {
  position: absolute;
  top: 9px;
  right: 18px;
  background: #58D68D;
  color: #000;
  font-size: 0.75rem;
  font-weight: bold;
  padding: 0.1rem 0.4rem;
  border-radius: 50%;
}

/* Modal Cart */
.modal-cart {
  position: fixed;
  top: 0;
  right: 0;
  width: 400px;
  height: 100%;
  background: #fff;
  box-shadow: -2px 0 8px rgba(0, 0, 0, 0.2);
  display: none;
  z-index: 1000;
}

